@model Review

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index">Movies</a></li>
        <li class="breadcrumb-item active" aria-current="page">Delete Review</li>
    </ol>
</nav>

<h2 class="mt-4 mb-4">Delete Review</h2>

<div class="card shadow p-4" >
    <h4 class="mb-4">Are you sure you want to delete this Review?</h4>

    <dl class="row">
        <dt class = "col-sm-2">Name</dt>
        <dd class = "col-sm-10">@Model.Name</dd>
        
        <dt class = "col-sm-2">On</dt>
        <dd class = "col-sm-10">@Model.On</dd>
        
        <dt class = "col-sm-2">Comment</dt>
        <dd class = "col-sm-10">@Model.Comment</dd>

        <dt class = "col-sm-2">Rating</dt>
        <dd class = "col-sm-10">@Model.Rating</dd>
    </dl>
    
    <form asp-action="DeleteReviewConfirmed" asp-route-Id="@Model.Id">
        <input type="submit" value="Delete" class="btn btn-danger"/> 
        <a asp-action="Details" asp-route-id="@Model.MovieId">Cancel</a>
    </form>
</div>


