@model Movie


<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Movies</a></li>
        <li class="breadcrumb-item active" aria-current="page">Delete</li>
    </ol>
</nav>

<h2 class="mt-4 mb-4">Delete</h2>

<div class="card shadow p-4 mt-4">
    <h4 class="mb-4">Are you sure you want to delete this @ViewData["Title"]?</h4>

    <div>
        <dl class="row">
            <dt class = "col-sm-2">Title</dt>
            <dd class = "col-sm-10">@Model.Title</dd>
        
            <dt class = "col-sm-2">Director</dt>
            <dd class = "col-sm-10">@Model.Director</dd>
            
            <dt class = "col-sm-2">Year</dt>
            <dd class = "col-sm-10">@Model.Year</dd>
            
            <dt class = "col-sm-2">Cast</dt>
            <dd class = "col-sm-10">@Model.Cast</dd>
            
            <dt class = "col-sm-2">Duration</dt>
            <dd class = "col-sm-10">@Model.Duration</dd>
            
            <dt class = "col-sm-2">Rating</dt>
            <dd class = "col-sm-10">@Model.Rating %</dd>
            
            <dt class = "col-sm-2">Plot</dt>
            <dd class = "col-sm-10">@Model.Plot</dd>
        </dl>
        
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Back to List</a>
        </form>
    </div>
</div>