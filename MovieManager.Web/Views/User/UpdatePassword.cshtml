@model UserPasswordChangeViewModel

<div class="card shadow p-4 mt-4">
    
    <h3 class="mb-3">Update Password</h3>
    
    <form asp-action="UpdatePassword" asp-route-id="@Model.Id" method="post">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        @* <input asp-for="Id" type="hidden" /> *@

        <div class="mt-3">
            <label asp-for="OldPassword" class="form-label"><i class="bi-shield-lock-fill"></i>Old Password</label>
            <input type="password" asp-for="OldPassword" class="form-control" />
            <span asp-validation-for="OldPassword" class="text-danger"></span>
        </div>
        
        <div class="mt-3">
            <label asp-for="Password" class="form-label"><i class="bi-shield-lock-fill"></i> Password</label>
            <input type="password" asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="PasswordConfirm" class="form-label">Password Confirm</label>
            <input type="password" asp-for="PasswordConfirm" class="form-control" />
            <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <input type="submit" value="Save" class="btn btn-primary" />
            <a class="btn btn-secondary" asp-controller="Home" asp-action="Index">Cancel</a>
        </div>

    </form>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
